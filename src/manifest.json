{
  "name": "HoloTools Portal",
  "version": "1.0.1",
  "description": "Quickly jump from current YouTube video to HoloTools website!",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://hololive.jetri.co/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png"
    },
    "default_title": "HoloTools Portal"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "128": "images/icon128.png"
  }
}
